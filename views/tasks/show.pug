doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Tarea
    body
        h1= task.description
        p= task.createdAt
        hr
        p
            strong Autor: 
            span= task.user.email
        hr
        ul
            strong Categorias
            hr
            each category in task.categories
                strong ID
                p= category.id
                strong Titulo
                p= category.title
        hr
        form(action=`/tasks/${task.id}?_method=DELETE` method="POST")
            input(type="submit" value="Eliminar")
    